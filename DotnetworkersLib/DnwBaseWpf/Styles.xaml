<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style TargetType="{x:Type TextBlock}">
		<Setter Property="FontSize" Value="9pt" />
		<Setter Property="FontFamily" Value="Segoe UI" />
	</Style>

	<Style TargetType="{x:Type Label}">
		<Setter Property="FontSize" Value="12pt" />
	</Style>

	<Style TargetType="{x:Type TextBox}">
		<Setter Property="FontSize" Value="9pt" />
	</Style>

	<Style x:Key="MainInstruction"  TargetType="{x:Type TextBlock}">
		<Setter Property="Foreground" Value="#FF003399" />
		<Setter Property="FontSize" Value="12pt" />
		<Setter Property="Margin" Value="0,0,0,5" />
	</Style>

	<Style x:Key="Header"  TargetType="{x:Type TextBlock}">
		<Setter Property="Foreground" Value="#FF003399" />
		<Setter Property="FontSize" Value="11pt" />
		<Setter Property="Margin" Value="0,0,15,4" />
		<Setter Property="TextWrapping" Value="Wrap" />
	</Style>

	<Style x:Key="Status"  TargetType="{x:Type TextBlock}">
		<Setter Property="Foreground" Value="#FF3a752a" />
		<Setter Property="FontSize" Value="11pt" />
		<Setter Property="Margin" Value="0,0,15,4" />
		<Setter Property="TextWrapping" Value="Wrap" />
	</Style>


</ResourceDictionary>